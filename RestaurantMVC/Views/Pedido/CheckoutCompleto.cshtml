@model Pedido 

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Customer : <strong>@Model.Nome</strong></p>
            <p>Data : <strong>@Model.PedidoEnviado</strong></p>
            <p>Order Number : <strong>@Model.PedidoId</strong></p>
            <table class="table">
            
               <tr>
                   <th></th>
                    <th>Quantity</th>
                    <th>Product</th>
                    <th>Price</th>
               </tr>
               @foreach(var item in Model.PedidoItens)
               {
                   <tr>
                       <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Lanche.Nome</td>
                        <td>@item.Lanche.Preco</td>
                   </tr>
               }
</table>
                   
                 <h4>Your order's total: <strong>@(((decimal)ViewBag.TotalPedido).ToString("c2"))</strong></h4>   
        </div>
    </div>
</div>

<div class="form-group" style="text-align :center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Return</a>
    </h3>
</div>
